<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.*?>

<!--
  Restored the <left> sidebar and original pane size.
  Kept the <clip> for the circular profile picture.
-->
<BorderPane prefHeight="591.0" prefWidth="922.0"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="nexum.nexum.HomepageProfileController">

    <left>
        <!-- This VBox uses the .sidebar style from application.css -->
        <VBox fx:id="sidebar" alignment="CENTER" prefWidth="80" spacing="20" styleClass="sidebar">
            <Pane prefHeight="43.0" prefWidth="70.0">
                <children>
                    <ImageView fitHeight="18.0" fitWidth="29.0" layoutX="21.0" layoutY="20.0" preserveRatio="true">
                        <image>
                            <Image url="@image/NEXUM LOGO 1.png" />
                        </image>
                    </ImageView>
                </children>
            </Pane>
            <Region VBox.vgrow="ALWAYS" />
            <!-- These buttons use .sidebar-button from application.css -->
            <Button styleClass="sidebar-button">
                <graphic>
                    <ImageView fitHeight="22" fitWidth="22" preserveRatio="true">
                        <image><Image url="@image/HOME ICON.png" /></image>
                    </ImageView>
                </graphic>
            </Button>
            <Button styleClass="sidebar-button">
                <graphic>
                    <ImageView fitHeight="37.0" fitWidth="22.0" preserveRatio="true">
                        <image><Image url="@image/PLUS ICON.png" /></image>
                    </ImageView>
                </graphic>
            </Button>
            <Button styleClass="sidebar-button">
                <graphic>
                    <ImageView fitHeight="22" fitWidth="22" preserveRatio="true">
                        <image><Image url="@image/NOTIFICATION ICON.png" /></image>
                    </ImageView>
                </graphic>
            </Button>
            <!-- This button uses .sidebar-button-selected from application.css -->
            <Button styleClass="sidebar-button-selected">
                <graphic>
                    <ImageView fitHeight="22" fitWidth="22" preserveRatio="true">
                        <image><Image url="@image/PROFILE ICON.png" /></image>
                    </ImageView>
                </graphic>
            </Button>
            <Region prefHeight="73.0" prefWidth="70.0" VBox.vgrow="ALWAYS" />
            <Button styleClass="sidebar-button">
                <graphic>
                    <ImageView fitHeight="22" fitWidth="22" preserveRatio="true">
                        <image>
                            <Image url="@image/LOGOUT ICON.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Region prefHeight="20.0" prefWidth="70.0" />
        </VBox>
    </left>

    <center>
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-background-color: #f0f2f5;" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="30.0" />
            </padding>
            <children>
                <Label text="Profile">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <!-- This VBox uses .profile-card from application.css -->
                <VBox alignment="TOP_CENTER" spacing="20.0" styleClass="profile-card">
                    <children>
                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <!-- Uses .profile-picture from application.css -->
                                <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" styleClass="profile-picture">
                                    <image>
                                        <Image url="@image/PROFILE ICON.png" />
                                    </image>
                                    <!--
                                      This clip tag is the correct way to make the
                                      ImageView circular. The center/radius must match
                                      half of the fitHeight/fitWidth.
                                    -->
                                    <clip>
                                        <Circle centerX="50.0" centerY="50.0" radius="50.0" />
                                    </clip>
                                </ImageView>
                                <VBox alignment="CENTER_LEFT" spacing="5.0">
                                    <children>
                                        <!-- Uses .profile-name from application.css -->
                                        <Label styleClass="profile-name" text="Christian Carl C. Cabalde" />
                                        <!-- Uses .profile-email from application.css -->
                                        <Label styleClass="profile-email" text="cccabalde50858@liceo.edu.ph" />
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- Uses .edit-profile-button from application.css -->
                        <Button fx:id="editProfileButton" maxWidth="350.0" styleClass="edit-profile-button" text="Edit Profile" />

                        <!--
                          Separator *after* the Edit Profile button
                        -->
                        <Separator maxWidth="350.0" />

                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <!-- Uses .tab-button-selected from application.css -->
                                <Button fx:id="postsButton" onAction="#onPostsClick" styleClass="tab-button-selected" text="Posts" />
                                <!-- Uses .tab-button from application.css -->
                                <Button fx:id="savedButton" onAction="#onSavedClick" styleClass="tab-button" text="Saved" />
                            </children>
                        </HBox>

                        <!--
                          Second separator below the tabs
                        -->
                        <Separator maxWidth="350.0" />
                    </children>
                    <padding>
                        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                    </padding>
                </VBox>
            </children>
        </VBox>
    </center>

</BorderPane>