<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="nexum.nexum.ForgotPasswordController"
            prefHeight="600.0" prefWidth="600.0">

    <!-- Page Title -->
    <Label layoutX="251.0" layoutY="185.0" text="Find Your Account" styleClass="findYourAccountLabel"/>

    <!-- Email Input -->
    <TextField fx:id="emailField" layoutX="127.0" layoutY="223.0"
               prefHeight="48.0" prefWidth="346.0" promptText="Email..."
               styleClass="emailInput"/>

    <!-- Search Button -->
    <Button layoutX="127.0" layoutY="286.0" prefHeight="48.0" prefWidth="346.0"
            text="Search" styleClass="searchBtn" mnemonicParsing="false"/>

    <!-- OR Label -->
    <Label layoutX="294.0" layoutY="362.0" text="or" styleClass="orLabel"/>

    <!-- Login Button -->
    <Button fx:id="loginBtn" layoutX="258.0" layoutY="399.0" prefHeight="30.0" prefWidth="84.0"
            text="Login" underline="true" styleClass="signInBtn" mnemonicParsing="false"
            alignment="CENTER" onAction="#handleLoginClick">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>

</AnchorPane>
