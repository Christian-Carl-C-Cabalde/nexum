<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
  Root VBox to center the content card in the entire window.
  It's linked to the new CSS file.
-->

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="600.0" styleClass="root-pane" stylesheets="@styles/forgot-password.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nexum.nexum.ForgotPasswordController">
    <children>

        <!--
          Content Card: A nested VBox to create the white card
          with a shadow, rounded corners, and max width.
        -->
        <VBox alignment="CENTER" maxWidth="400.0" prefHeight="259.0" prefWidth="368.0" spacing="20.0" styleClass="content-card">
            <children>
                <!-- Page Title -->
                <Label styleClass="title-label" text="Find Your Account" />

                <!-- Email Input -->
                <TextField fx:id="emailField" promptText="Email..." styleClass="email-input" />

                <!-- Search Button -->
                <Button fx:id="searchBtn"
                        mnemonicParsing="false"
                        prefHeight="0.0"
                        prefWidth="318.0"
                        styleClass="search-button"
                        text="Search"
                        onAction="#handleSearchClick"/>


                <!-- OR Label -->
                <Label styleClass="or-label" text="or" />

                <!-- Login Button -->
                <Button fx:id="backToLoginBtn" mnemonicParsing="false" onAction="#handleBackToLoginClick" styleClass="login-button" text="Back to Login" />
            </children>
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
        </VBox>

    </children>
</VBox>
